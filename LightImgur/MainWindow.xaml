<Window x:Class="LightImgur.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LightImgur"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <TextBox x:Name="textBoxPing" HorizontalAlignment="Left" Height="23" Margin="10,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsEnabled="False"/>
        <Button x:Name="buttonGetToken" Content="Submit" HorizontalAlignment="Left" Margin="135,11,0,0" VerticalAlignment="Top" Width="75" Click="buttonGetToken_Click" IsEnabled="False"/>
        <Button x:Name="buttonRegisterApp" Content="App Registration" HorizontalAlignment="Left" Margin="414,10,0,0" VerticalAlignment="Top" Width="93" Click="buttonRegisterApp_Click"/>

    </Grid>
</Window>
